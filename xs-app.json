{
  "welcomeFile": "/index.html",
  "authenticationMethod": "route",
  "routes": [
    {
      "source": "^/v2/(.*)$",
      "target": "/v2/$1",
      "destination": "ConfigProdAuth",
      "authenticationType": "xsuaa",
      "csrfProtection": false,
      "scope":{
          "GET": ["$XSAPPNAME.User",
        "$XSAPPNAME.read"],
          "PUT": ["$XSAPPNAME.User",
        "$XSAPPNAME.read"],
          "PATCH": ["$XSAPPNAME.User",
        "$XSAPPNAME.read"],
          "POST": ["$XSAPPNAME.User",
        "$XSAPPNAME.read"],
          "DELETE": ["$XSAPPNAME.User",
        "$XSAPPNAME.read"],
          "default": ["$XSAPPNAME.User",
        "$XSAPPNAME.read"]
      }
    },
    {
      "source": "^/v2/catalog/(.*)$",
      "target": "/v2/catalog/$1",
      "destination": "ConfigProd",
      "authenticationType": "xsuaa",
      "csrfProtection": false,
      "scope":{
          "GET": ["$XSAPPNAME.User",
          "$XSAPPNAME.read"
        ],
          "PUT": ["$XSAPPNAME.User",
        "$XSAPPNAME.read"],
          "PATCH": ["$XSAPPNAME.User",
        "$XSAPPNAME.read"],
          "POST": ["$XSAPPNAME.User",
        "$XSAPPNAME.read"],
          "DELETE": ["$XSAPPNAME.User",
        "$XSAPPNAME.read"],
          "default": ["$XSAPPNAME.User",
        "$XSAPPNAME.read"]
      }
    },
    {
      "source": "^/v2/jobs/(.*)$",
      "target": "/v2/jobs/$1",
      "destination": "ConfigProd",
      "authenticationType": "xsuaa",
      "csrfProtection": false,
      "scope": {
        "GET": [
          "$XSAPPNAME.User",
          "$XSAPPNAME.read"
        ],
        "PUT": [
          "$XSAPPNAME.User",
          "$XSAPPNAME.read"
        ],
        "PATCH": [
          "$XSAPPNAME.User",
          "$XSAPPNAME.read"
        ],
        "POST": [
          "$XSAPPNAME.User",
          "$XSAPPNAME.read"
        ],
        "DELETE": [
          "$XSAPPNAME.User",
          "$XSAPPNAME.read"
        ],
        "default": [
          "$XSAPPNAME.User",
          "$XSAPPNAME.read"
        ]
      }
    },
    {
      "source": "^/resources/(.*)$",
      "target": "/resources/$1",
      "authenticationType": "none",
      "destination": "ui5"
    },
    {
      "source": "^/test-resources/(.*)$",
      "target": "/test-resources/$1",
      "authenticationType": "none",
      "destination": "ui5"
    },
    {
      "source": "^(.*)$",
      "target": "$1",
      "service": "html5-apps-repo-rt",
      "authenticationType": "xsuaa"
    }
  ]
}
